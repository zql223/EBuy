<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ProductCategoryMapper">
    <select id="yiji" resultType="com.example.entity.ProductCategory">
        select * from easybuy_product_category where type =1
    </select>
    <select id="erji" resultType="com.example.entity.ProductCategory">
        select  * from easybuy_product_category where parentId=#{parentId}
    </select>
    <select id="sanji" resultType="com.example.entity.ProductCategory">
        select  * from easybuy_product_category where parentId=#{parentId}
    </select>

</mapper>